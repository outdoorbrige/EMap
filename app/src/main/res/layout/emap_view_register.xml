<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emap_view_register"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:stretchColumns="0,1">

    <TableRow>
        <!--用户注册-->
        <TextView
            android:id="@+id/emap_user_register_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--用户名*-->
        <EditText
            android:id="@+id/emap_view_register_user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="用户名*"
            android:background="@null"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--密码*-->
        <EditText
            android:id="@+id/emap_view_register_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="密码*"
            android:background="@null"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--密码确认*-->
        <EditText
            android:id="@+id/emap_view_register_confirm_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="密码确认*"
            android:background="@null"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--昵称-->
        <EditText
            android:id="@+id/emap_view_register_nickname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="昵称"
            android:background="@null"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--手机号-->
        <EditText
            android:id="@+id/emap_view_register_telnumber_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="手机号"
            android:background="@null"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--邮箱-->
        <EditText
            android:id="@+id/emap_view_register_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="邮箱"
            android:background="@null"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <!--注册-->
        <Button
            android:id="@+id/emap_view_register_register_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册"/>
        <!--返回-->
        <Button
            android:id="@+id/emap_view_register_return_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回"/>
    </TableRow>

</TableLayout>