<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 当前城市 -->
    <TextView
        android:id="@+id/city_list_current_city_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前城市"
        android:background="@color/colorLightGrey"/>

    <ListView
        android:id="@+id/city_list_current_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 热门城市 -->
    <TextView
        android:id="@+id/city_list_hot_city_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"/>

    <ListView
        android:id="@+id/city_list_hot_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- 其他城市 -->
    <TextView
        android:id="@+id/city_list_other_city_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"/>

    <ExpandableListView
        android:id="@+id/city_list_other_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>