<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <!--用户登录-->
    <Button
        android:id="@+id/emap_search_bar_login_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@mipmap/btn_offline"/>
    <!--分割条-->
    <ImageView
        android:id="@+id/emap_search_bar_divider_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_searchbar_divider"/>
    <!--搜索内容-->
    <EditText
        android:id="@+id/emap_search_bar_content_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cursorVisible="true"
        android:singleLine="true"
        android:hint="搜索"
        android:background="@null"/>
    <!--分割条-->
    <ImageView
        android:id="@+id/emap_search_bar_divider_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_searchbar_divider"/>
    <!--搜索按钮-->
    <Button
        android:id="@+id/emap_search_bar_route_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@mipmap/route_btn"/>
</LinearLayout>