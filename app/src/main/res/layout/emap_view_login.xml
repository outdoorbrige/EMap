<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emap_view_login"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/emap_view_login_bolder">

    <!--用户登录-->
    <TextView
        android:id="@+id/emap_user_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登录"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <!--用户名-->
    <EditText
        android:id="@+id/emap_view_login_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:singleLine="true"
        android:hint="用户名"
        android:background="@null"/>

    <!--密码-->
    <EditText
        android:id="@+id/emap_view_login_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:cursorVisible="true"
        android:singleLine="true"
        android:hint="密码"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <!--记住密码-->
        <CheckBox
            android:id="@+id/emap_view_login_kepp_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="记住密码"/>

        <!--自动登录-->
        <CheckBox
            android:id="@+id/emap_view_login_auto_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自动登录"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <!--注册-->
        <Button
            android:id="@+id/emap_view_login_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册"/>
        <!--登录-->
        <Button
            android:id="@+id/emap_view_login_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登录"/>
        <!--关闭-->
        <Button
            android:id="@+id/emap_view_login_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关闭"/>
    </LinearLayout>

    <!--忘记了密码？-->
    <TextView
        android:id="@+id/emap_view_login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记了密码？"
        android:textColor="#1E90FF"
        android:textSize="18dp"/>

</LinearLayout>