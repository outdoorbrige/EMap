<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emap_view_login"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:stretchColumns="0,1,2">

    <TableRow>
        <!--用户登录-->
        <TextView
            android:id="@+id/emap_user_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <!--用户名-->
        <EditText
            android:id="@+id/emap_view_login_user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="用户名"
            android:background="@null"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <!--密码-->
        <EditText
            android:id="@+id/emap_view_login_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:cursorVisible="true"
            android:singleLine="true"
            android:hint="密码"
            android:background="@null"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <!--记住密码-->
        <CheckBox
            android:id="@+id/emap_view_login_kepp_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="记住密码"/>

        <!--自动登录-->
        <CheckBox
            android:id="@+id/emap_view_login_auto_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自动登录"/>
    </TableRow>
    <TableRow>
        <!--注册-->
        <Button
            android:id="@+id/emap_view_login_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册"/>
        <!--登录-->
        <Button
            android:id="@+id/emap_view_login_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登录"/>
        <!--关闭-->
        <Button
            android:id="@+id/emap_view_login_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关闭"/>
    </TableRow>
    <TableRow>
        <!--忘记了密码？-->
        <TextView
            android:id="@+id/emap_view_login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记了密码？"
            android:textColor="#1E90FF"
            android:textSize="18dp"
            android:layout_span="3"/>
    </TableRow>

</TableLayout>