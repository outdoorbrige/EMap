<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 当前城市 -->
    <TextView
        android:id="@+id/offline_map_download_tab_one_current_city_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"/>

    <ExpandableListView
        android:id="@+id/offline_map_download_tab_one_current_city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 热门城市 -->
    <TextView
        android:id="@+id/offline_map_download_tab_one_hot_city_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"/>

    <ExpandableListView
        android:id="@+id/offline_map_download_tab_one_hot_city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 其他城市 -->
    <TextView
        android:id="@+id/offline_map_download_tab_one_other_city_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"/>

    <ExpandableListView
        android:id="@+id/offline_map_download_tab_one_other_city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>